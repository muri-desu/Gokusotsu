<ThingDef ParentName="GHG_ApparelBase"><!-- 褌A -->
	<defName>Apparel_FundoshiA</defName>
		<label>Loincloth A</label>
		<description>An old-fashioned undergarment made of a single piece of cloth about six feet long.</description>

	<graphicData>
		<texPath>Things/Apparel/FundoshiA</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>

	<statBases>
		<WorkToMake>2000</WorkToMake>
		<MaxHitPoints>120</MaxHitPoints>
		<Mass>0.1</Mass>
		<StuffEffectMultiplierArmor>0.05</StuffEffectMultiplierArmor>
		<StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
		<StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
		<EquipDelay>1.0</EquipDelay>
	</statBases>

	<stuffCategories>
		<li>Fabric</li>
	</stuffCategories>
	<costStuffCount>25</costStuffCount>

	<apparel>
		<bodyPartGroups>
			<li>Waist</li>
			<li>Legs</li>
			<li MayRequire="rim.job.world">GenitalsBPG</li>
		</bodyPartGroups>
		<layers>
			<li>OnSkin</li>
		</layers>
		<wornGraphicPath>Things/Apparel/FundoshiA</wornGraphicPath>
	<tags>
		<li>GHG_Basic</li>
	</tags>
	<defaultOutfitTags>
		<li>Worker</li>
		<li>Soldier</li>
	</defaultOutfitTags>
	</apparel>
</ThingDef>

