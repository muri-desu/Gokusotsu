		<layers>
			<li>OnSkin</li>
		</layers>
		<wornGraphicPath>Things/Apparel/Haragake</wornGraphicPath>
	<tags>
		<li>GHG_Basic</li>
	</tags>
	</apparel>
</ThingDef>

