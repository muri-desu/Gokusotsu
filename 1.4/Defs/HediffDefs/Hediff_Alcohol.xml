<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef>
	<defName>AlcoholHigh_GHG</defName>
	<label>alcohol</label>
	<labelNoun>drunkenness</labelNoun>
	<description>Alcohol in the bloodstream. It increases gokusotsu's health.</description>
	<hediffClass>Hediff_Alcohol</hediffClass>
	<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
	<scenarioCanAdd>true</scenarioCanAdd>
	<isBad>false</isBad>
	<comps>
		<li Class="HediffCompProperties_Effecter">
			<stateEffecter>Drunk</stateEffecter>
			<severityIndices>3~5</severityIndices>
		</li>
		<li Class="HediffCompProperties_SeverityPerDay">
			<severityPerDay>-0.75</severityPerDay>
			<showHoursToRecover>true</showHoursToRecover>
		</li>
	</comps>
	<stages>
		<li>
			<label>warm</label>
				<statOffsets>
					<ComfyTemperatureMin>-5</ComfyTemperatureMin>
					<ImmunityGainSpeed>0.03</ImmunityGainSpeed>
					<InjuryHealingFactor>0.05</InjuryHealingFactor>
					<BedHungerRateFactor>0.05</BedHungerRateFactor>
				</statOffsets>
		</li>
		<li>
			<minSeverity>0.25</minSeverity>
			<label>tipsy</label>
				<statOffsets>
					<ComfyTemperatureMin>-10</ComfyTemperatureMin>
					<ImmunityGainSpeed>0.07</ImmunityGainSpeed>
					<InjuryHealingFactor>0.1</InjuryHealingFactor>
					<BedHungerRateFactor>0.1</BedHungerRateFactor>
				</statOffsets>
		</li>
		<li>
			<minSeverity>0.4</minSeverity>
			<label>drunk</label>
				<statOffsets>
					<ComfyTemperatureMin>-15</ComfyTemperatureMin>
					<ImmunityGainSpeed>0.125</ImmunityGainSpeed>
					<InjuryHealingFactor>0.125</InjuryHealingFactor>
					<BedHungerRateFactor>0.125</BedHungerRateFactor>
				</statOffsets>
		</li>
		<li>
			<minSeverity>0.7</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-20</ComfyTemperatureMin>
					<ImmunityGainSpeed>0.15</ImmunityGainSpeed>
					<InjuryHealingFactor>0.15</InjuryHealingFactor>
					<BedHungerRateFactor>0.15</BedHungerRateFactor>
				</statOffsets>
		</li>
		<li>
			<minSeverity>0.9</minSeverity>
				<statOffsets>
					<ComfyTemperatureMin>-20</ComfyTemperatureMin>
					<ImmunityGainSpeed>0.2</ImmunityGainSpeed>
					<InjuryHealingFactor>0.2</InjuryHealingFactor>
					<BedHungerRateFactor>0.2</BedHungerRateFactor>
				</statOffsets>
		</li>
	</stages>
</HediffDef>

</Defs>