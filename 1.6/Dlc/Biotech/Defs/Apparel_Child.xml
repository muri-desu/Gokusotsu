	</thingCategories>
	<colorGenerator Class="ColorGenerator_Options">
		<options>
			<li>
				<weight>1</weight>
				<only>(1,1,1)</only>
			</li>
		</options>
	</colorGenerator>
	<tradeTags>
		<li>GHG_Apparel</li>
	</tradeTags>
</ThingDef>

	<StuffCategoryDef>
		<defName>Straw</defName>
		<label>straw</label>
	</StuffCategoryDef>
