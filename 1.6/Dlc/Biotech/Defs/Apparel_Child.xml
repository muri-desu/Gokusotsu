<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="GHG_ApparelBase"><!-- 腹がけ -->
	<defName>Apparel_Haragake</defName>
		<label>Kids' apron</label>
		<description>An Apron-like easy cloth for kids.</description>

	<graphicData>
		<texPath>Gokusotsu/Things/Apparel/Haragake</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>

	<statBases>
		<WorkToMake>3000</WorkToMake>
		<MaxHitPoints>250</MaxHitPoints>
		<Mass>0.5</Mass>
		<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
		<ArmorRating_Heat>0.03</ArmorRating_Heat>
		<Insulation_Cold>0.05</Insulation_Cold>
		<Insulation_Heat>0</Insulation_Heat>
		<EquipDelay>3</EquipDelay>
	</statBases>

	<stuffCategories>
		<li>Fabric</li>
		<li>Leathery</li>
	</stuffCategories>
	<costStuffCount>30</costStuffCount>

	<equippedStatOffsets>
	</equippedStatOffsets>

	<apparel>
		<developmentalStageFilter>Child</developmentalStageFilter>
		<bodyPartGroups>
			<li>Torso</li>
			<li>Legs</li>
		</bodyPartGroups>
		<layers>
			<li>OnSkin</li>
		</layers>
		<wornGraphicPath>Gokusotsu/Things/Apparel/Haragake</wornGraphicPath>
	<tags>
		<li>GHG_Basic</li>
	</tags>
	</apparel>

	<colorGenerator Class="ColorGenerator_StandardApparel" />
	<tradeTags>
		<li>GHG_Apparel</li>
	</tradeTags>
</ThingDef>

<ThingDef ParentName="GHG_HatBase"><!-- 雪ん子 -->
